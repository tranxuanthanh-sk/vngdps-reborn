---
interface Props {
  langCode: string
  title: string
  desc: string
}

const { langCode, title, desc } = Astro.props
---

<!doctype html>
<html lang={langCode}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={desc} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
